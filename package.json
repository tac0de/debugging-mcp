{
  "name": "@tac0de/debugging-mcp",
  "version": "0.3.0",
  "description": "A strict debugging protocol MCP server for AI coding agents",
  "license": "MIT",
  "private": false,
  "type": "module",
  "bin": {
    "debugging-mcp": "dist/server.js"
  },
  "main": "./dist/server.js",
  "types": "./dist/server.d.ts",
  "exports": {
    ".": {
      "types": "./dist/server.d.ts",
      "default": "./dist/server.js"
    }
  },
  "keywords": [
    "mcp",
    "debugging",
    "ai-agent",
    "protocol",
    "software-debugging"
  ],
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tac0de/debugging-mcp"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "prepublishOnly": "npm run build",
    "start": "npm run build && node dist/server.js",
    "test": "npm run build && node --test"
  },
  "files": [
    "dist",
    "src",
    "rules",
    "output",
    "examples",
    "README.md"
  ]
}
